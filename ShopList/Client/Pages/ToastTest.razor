<button class="btn btn-info" @onclick="@(() => toastService.ShowInfo("Test Info message"))">Show info</button>
<button class="btn btn-success" @onclick="@(() => toastService.ShowSuccess("Test Success message"))">Success Toast</button>
<button class="btn btn-warning" @onclick="@(() => toastService.ShowWarning("Test Warning message"))">Warning Toast</button>
<button class="btn btn-danger" @onclick="@(() => toastService.ShowError("Test Error message"))">Error Toast</button>
